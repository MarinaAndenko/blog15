<%= form_for @post, remote: true do |f| %>
  <div id="error" >
    <%= render partial: 'error', locals: {post: @post} %>
  </div>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, id: "post-name" %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, id: "post-text" %>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>